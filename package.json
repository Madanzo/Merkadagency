{
  "name": "merkadagency",
  "version": "0.1.0",
  "private": true,
  "description": "MerkadAgency - AI-powered video creation platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "seed": "pnpm --filter @merkad/api seed",
    "db:migrate": "pnpm --filter @merkad/api db:migrate",
    "db:push": "pnpm --filter @merkad/api db:push",
    "db:studio": "pnpm --filter @merkad/api db:studio"
  },
  "devDependencies": {
    "turbo": "^2.0.12",
    "prettier": "^3.3.3",
    "@types/node": "^20.14.15",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
