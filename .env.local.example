# MerkadAgency Environment Variables
# Copy this file to .env.local and fill in your API keys

# Image Generation (Nano Banana)
# Get your API key from https://nanobanana.ai
NANOBANANA_API_KEY=your_nanobanana_api_key_here

# Video Generation (Kling)
# Get your API key from https://kling.ai
KLING_API_KEY=your_kling_api_key_here

# Feature Flags
# Set to 'true' to use mock implementations (useful for development without API keys)
USE_MOCK_IMAGE_GEN=true
USE_MOCK_VIDEO_GEN=true

# Node Environment
NODE_ENV=development
